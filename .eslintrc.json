{
  "extends": "@rocketseat/eslint-config/react",
  "rules": {
    "camelcase": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "arrowParens": "always",
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false,
        "tabWidth": 2
      }
    ],
    "@typescript-eslint/adjacent-overload-signatures": "error",
    "no-undef": "off"
  }
}
